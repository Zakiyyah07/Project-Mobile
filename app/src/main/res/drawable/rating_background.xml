<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- High Rating (8.0+) - Gold -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="#FFC107" />
            <stroke
                android:width="1dp"
                android:color="#FF7427" />
        </shape>
    </item>

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FF7427" />
        </shape>
    </item>

    <!-- Default Rating Background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#252836" />
            <stroke
                android:width="1dp"
                android:color="#888F96" />
        </shape>
    </item>

</selector>